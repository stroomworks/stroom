<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:form="urn:import:stroom.widget.form.client"
             xmlns:l="urn:import:stroom.item.client"
             xmlns:b="urn:import:stroom.widget.button.client">
    <g:FlowPanel styleName="max form">
        <form:FormGroup identity="annotationTagName" label="Name">
            <g:TextBox ui:field="name" addStyleNames="w-100"/>
        </form:FormGroup>

        <form:FormGroup ui:field="styleGroup"
                        identity="cfStyle"
                        label="Style"
                        helpText="Choose a style for the tag.">
            <l:SelectionBox ui:field="formattingStyle"/>
        </form:FormGroup>

        <form:FormGroup>
            <b:Button ui:field="editPermissions"
                      addStyleNames="allow-focus Button--contained-primary"
                      text="Change Permissions"/>
        </form:FormGroup>
    </g:FlowPanel>
</ui:UiBinder> 
